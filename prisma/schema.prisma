generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Tenant {
  id                   String          @id @default(cuid())
  companyName          String
  legalName            String?
  tradeName            String?
  cnpj                 String?         @unique
  businessAddress      String?
  neighborhood         String?
  city                 String?
  state                String?
  zipCode              String?
  stateRegistration    String?
  printerLimit         Int             @default(1)
  stripeCustomerId     String?
  stripeSubscriptionId String?
  subscriptionStatus   String?
  createdAt            DateTime        @default(now())
  updatedAt            DateTime        @updatedAt
  items                Item[]
  groups               ItemGroup[]
  prints               LabelPrint[]
  methods              Method[]
  printers             PrinterConfig[]
  units                Unit[]
  users                User[]
}

model User {
  id                  String               @id @default(cuid())
  tenantId            String
  name                String
  email               String               @unique
  username            String?              @unique
  emailVerified       DateTime?
  image               String?
  passwordHash        String
  role                String               @default("OPERATOR")
  unit                String
  createdAt           DateTime             @default(now())
  updatedAt           DateTime             @updatedAt
  accounts            Account[]
  labelPrints         LabelPrint[]
  passwordResetTokens PasswordResetToken[]
  printerConfigs      PrinterConfig[]
  sessions            Session[]
  tenant              Tenant               @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@index([tenantId])
}

model Item {
  id                     String       @id @default(cuid())
  tenantId               String
  itemCode               String       @unique
  name                   String
  type                   String       @default("GERAL")
  groupId                String?
  sif                    String?
  notes                  String?
  chilledHours           Int?
  frozenHours            Int?
  ambientHours           Int?
  hotHours               Int?
  thawingHours           Int?
  methodQuente           Boolean      @default(false)
  methodPistaFria        Boolean      @default(false)
  methodDescongelando    Boolean      @default(false)
  methodResfriado        Boolean      @default(false)
  methodCongelado        Boolean      @default(false)
  methodAmbienteSecos    Boolean      @default(false)
  selectedMethods        String[]     @default([])
  preferredStorageMethod String?
  createdAt              DateTime     @default(now())
  updatedAt              DateTime     @updatedAt
  group                  ItemGroup?   @relation(fields: [groupId], references: [id])
  tenant                 Tenant       @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  prints                 LabelPrint[]

  @@index([tenantId])
}

model Method {
  id            Int      @id @default(autoincrement())
  tenantId      String
  name          String
  durationValue Int
  durationUnit  String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  tenant        Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@unique([tenantId, name])
}

model Unit {
  id          String   @id @default(cuid())
  tenantId    String
  name        String
  email       String
  phone       String
  managerName String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  tenant      Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@unique([tenantId, name])
}

model ItemGroup {
  id        String   @id @default(cuid())
  tenantId  String
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  items     Item[]
  tenant    Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@unique([tenantId, name])
}

model ItemAlias {
  id        String   @id @default(cuid())
  tenantId  String
  alias     String
  itemId    String
  createdAt DateTime @default(now())

  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  item   Item   @relation(fields: [itemId], references: [id], onDelete: Cascade)

  @@unique([tenantId, alias])
}

model PrinterConfig {
  id        String   @id @default(cuid())
  tenantId  String
  name      String
  unit      String
  apiKey    String
  printerId Int
  isActive  Boolean  @default(true)
  userId    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  tenant    Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  user      User?    @relation(fields: [userId], references: [id])

  @@unique([tenantId, unit])
}

model PasswordResetToken {
  id        String   @id @default(cuid())
  userId    String
  tokenHash String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([expiresAt])
}

model LabelPrint {
  id            String   @id @default(cuid())
  tenantId      String
  itemId        String
  storageMethod String
  producedAt    DateTime
  expiresAt     DateTime
  userId        String
  quantity      Int
  createdAt     DateTime @default(now())
  item          Item     @relation(fields: [itemId], references: [id])
  tenant        Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  user          User     @relation(fields: [userId], references: [id])

  @@index([tenantId])
}

model Account {
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([provider, providerAccountId])
}

model Session {
  sessionToken String   @id @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@id([identifier, token])
}
